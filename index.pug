doctype html
head(lang='en')
  meta(charset='utf-8')
  title Schanj
  meta(name="description", content="")
  meta(name="viewport", content="width=device-width, initial-scale=1, shrink-to-fit=no")
  link(rel='stylesheet', href='./styles/main.css')
body
  #input
    span.currency US
    input(type="number", name="input", value="1")
  #display
    .container
      p.currency HTG
      input.result(readonly)
  hr
  #rate-selector
    select
      option(value="brh") BRH
      option(value="capital") Capital
      option(value="bnc") BNC
      option(value="sogebank") Sogebank
      option(value="unibank") Unibank
      option(value="bph") BPH
      option(value="buh") BUH
    .type
      button.active Achat
      button Vente
  hr
  #refresh
    .meta
      p.title Dernière mise à jour:
      p.time 15/02/2019
    button.refresh: img(src="./assets/image/refresh.svg", height="24px", width="24px")
  footer.footer
    p.brand #[b SCHANJ] by #[a(href="https://skydev.tech") Skydev]
  script(type="text/javascript", src="./scripts/index.js")
