{
    "manifest_version": 2,
    "name": "Schanj",
    "version": "1.0",
    "description": "Helps you perfom simple money conversion between US <-> HTG using local banks'rate",
    "icons": {
        "48": "assets/image/icon-48.png",
        "96": "assets/image/icon-96.png"
    },
    "permissions": [
        "storage"
    ],
    "browser_action": {
        "browser_style": false,
        "default_icon": {
            "16": "assets/image/icon-16.png",
            "32": "assets/image/icon-32.png",
            "64": "assets/image/icon-64.png"
        },
        "default_popup": "index.html"
    }
}
